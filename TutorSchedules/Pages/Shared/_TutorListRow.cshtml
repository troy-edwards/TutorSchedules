@model TutorSchedules.Models.Tutor

<tr>
  <td>@Model.Id</td>
  <td>@Model.DisplayName</td>
  <td>
    <a asp-page="TutorProfile" asp-route-Id="@Model.Id" class="btn btn-primary">Edit</a>
  </td>
  <td>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#TutorDeleteConfirmation-@Model.Id">
      Delete
    </button>
    <div class="modal fade" id="TutorDeleteConfirmation-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="TutorDeleteConfirmationLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="TutorDeleteConfirmationLabel">Confirm Delete?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete this tutor?</p>
          </div>
          <div class="modal-footer">
            <form method="post" asp-page="TutorList" asp-page-handler="Delete">
              <input name="idToDelete" value="@Model.Id" type="hidden"/>
              <button type="submit" class="btn btn-danger">
                Delete
              </button>
              <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                No
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </td>
</tr>